<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import trial.*?>
<?import trial.classesGestionContenu.*?>
<?scenebuilder-classpath-element .?>

<AnchorPane id="AnchorPane" prefHeight="543.0" prefWidth="640.0" 
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" 
            fx:controller="trial.contrôleurs.MatièreTableauContrôleur">
  <Label alignment="CENTER" contentDisplay="CENTER" layoutX="55.0" layoutY="130.0" prefWidth="562.0" style="-fx-font: NORMAL 20 Tahoma;" text="Resultats de la Recherche" textAlignment="CENTER" />
  <GridPane alignment="CENTER" hgap="10.0" layoutX="44.0" layoutY="155.0" prefHeight="374.0" prefWidth="582.0" vgap="10.0">
    <TableView fx:id="matièreTableView" prefHeight="271.0" prefWidth="554.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <columns>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="98.0" text="Titre" fx:id="matièreTitre">
          <cellValueFactory>
            <PropertyValueFactory property="titre" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="103.0" text="Auteur" fx:id="matièreAuteur">
          <cellValueFactory>
            <PropertyValueFactory property="auteur" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="127.0" text="Contenu" fx:id="matièreContenu">
          <cellValueFactory>
            <PropertyValueFactory property="contenu" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="127.0" text="Date" fx:id="matièreDate">
          <cellValueFactory>
            <PropertyValueFactory property="date" />
          </cellValueFactory>
        </TableColumn>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="106.0" text="Source" fx:id="matièreSource">
          <cellValueFactory>
            <PropertyValueFactory property="source" />
          </cellValueFactory>
        </TableColumn>
      </columns>
      <items>
        <FXCollections fx:factory="observableArrayList">
          <Article titre="default_titre1" auteur="default_auteur1" contenu="default_contenu1" />
          <Article titre="default_titre2" auteur="default_auteur2" contenu="default_contenu2" />
          <Article titre="default_titre3" auteur="default_auteur3" contenu="default_contenu3" />
        </FXCollections>
      </items>
    </TableView>
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <TextField fx:id="titreTextField" prefWidth="90.0" promptText="Titre" />
      <TextField fx:id="auteurTextField" prefWidth="90.0" promptText="Auteur" />
      <TextField fx:id="contenuTextField" prefWidth="150.0" promptText="Contenu" />
      <TextField fx:id="dateTextField" prefWidth="150.0" promptText="Date" />
      <TextField fx:id="sourceTextField" prefWidth="150.0" promptText="Source" />
      <Button onAction="#ajouteArticleToTable" prefWidth="111.0" text="Ajouter" />
    </HBox>
  </GridPane>
</AnchorPane>
